<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tom13.fooddemo">

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.FoodRecognitionActivity"
            android:label="@string/title_activity_food_recognition"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.UserLogsActivity"
            android:label="@string/title_activity_user_logs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.FoodLogActivity"
            android:label="@string/title_activity_food_log"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.Splash" />
        <activity android:name=".view.CaptureImageActivity"></activity>
    </application>

</manifest>